<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>data-processor</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>scripts/GUARDRAIL-3/*.pkl</exclude>
          <exclude>scripts/GUARDRAIL-3/*.joblib</exclude>
          <exclude>scripts/GUARDRAIL-3/*.faiss</exclude>
          <exclude>scripts/GUARDRAIL-3/*.csv</exclude>
          <exclude>scripts/GUARDRAIL-3/*.xlsx</exclude>
          <exclude>scripts/GUARDRAIL-3/**/*.pyc</exclude>
          <exclude>scripts/GUARDRAIL-3/__pycache__/**</exclude>
          <exclude>scripts/GUARDRAIL-3/DB/*.db</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <mainClass>com.example.anonymization.MockDataTestRunner</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <id>shade-main-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>data-processor-main</finalName>
              <transformers>
                <transformer>
                  <mainClass>com.example.anonymization.Main</mainClass>
                </transformer>
                <transformer />
                <transformer />
                <transformer>
                  <addHeader>false</addHeader>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <data.df.path>path-not-set</data.df.path>
    <attributes.path>path-not-set</attributes.path>
  </properties>
</project>
